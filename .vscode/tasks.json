{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build All",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": false,
      },
      "command": "build.bat",
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "Build Separate File",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true,
      },
      "command": "build-separate.bat",
      "args": [
        "\"${fileDirname}\\..\\build/${fileBasenameNoExtension}.exe\"",
        "\"${fileDirname}\\..\\include\"",
        "${file}",
      ],
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "Run Separate File",
      "type": "shell",
      "group": {
        "kind": "test",
        "isDefault": true,
      },
      "command": "\"${fileDirname}\\..\\build/${fileBasenameNoExtension}.exe\"",
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "type": "cppbuild",
      "label": "C/C++: gcc.exe build active file",
      "command": "C:\\Softwares\\Installed\\msys64\\mingw64\\bin\\gcc.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\..\\build\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "detail": "Task generated by Debugger."
    }
  ]
}
